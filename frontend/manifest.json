{
  "name": "SquadLock",
  "description": "Anti-goon++",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon-green.png"
  },
  "background": {
    "type": "module",
    "service_worker": "service_worker.js"
  },
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [ "blocked.html" ],
      "matches": [ "*://*/*" ]
    }
  ]
}
